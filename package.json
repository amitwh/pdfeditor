{
  "name": "pdf-editor",
  "version": "1.0.3",
  "description": "Open-source PDF editor with editing, merging, splitting, conversion and password protection features",
  "main": "src/main.js",
  "scripts": {
    "start": "electron . --no-sandbox",
    "dev": "electron . --dev --no-sandbox",
    "build": "electron-builder",
    "build:linux": "electron-builder --linux",
    "build:mac": "electron-builder --mac", 
    "build:windows": "electron-builder --win",
    "build:all": "electron-builder --linux --mac --win",
    "test": "jest",
    "lint": "eslint src/",
    "postinstall": "electron-builder install-app-deps"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:amitwh/pdfeditor.git"
  },
  "author": {
    "name": "Amit Haridas",
    "email": "amit.wh@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.48.0",
    "jest": "^29.6.4"
  },
  "dependencies": {
    "pdf-lib": "^1.17.1",
    "pdf-merger-js": "^4.3.0",
    "node-forge": "^1.3.1",
    "jimp": "^0.22.10"
  },
  "build": {
    "appId": "com.amitwh.pdfeditor",
    "productName": "PDF Editor",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "package.json",
      "!node_modules/**/test/**",
      "!node_modules/**/tests/**",
      "!node_modules/**/*.md",
      "!node_modules/**/*.map",
      "!node_modules/**/.git/**"
    ],
    "includeSubNodeModules": true,
    "nodeGypRebuild": false,
    "npmRebuild": false,
    "buildDependenciesFromSource": false,
    "asar": true,
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "deb",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "Office",
      "executableName": "pdf-editor",
      "maintainer": "Amit Haridas <amit.wh@gmail.com>"
    },
    "deb": {
      "depends": [],
      "packageCategory": "utils",
      "priority": "optional",
      "compression": "xz",
      "afterInstall": "build/linux/postinst.sh",
      "afterRemove": "build/linux/postrm.sh"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64", "ia32"]
        }
      ]
    }
  }
}